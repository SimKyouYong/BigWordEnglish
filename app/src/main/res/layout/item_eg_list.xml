<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >
		<TextView 
		    android:id="@+id/text_count"
		    android:layout_width="50dp"
		    android:layout_height="wrap_content"
		    android:text="2322"
		    android:textColor="#EDA900"
		    android:textSize="16dp"
		    android:gravity="center"
		    android:singleLine="true"
		    android:layout_centerVertical="true"
		    android:layout_margin="6dp"/>
		
		<Button android:id="@+id/btn_favorite"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true" />
		
		<Button android:id="@+id/btn_speek"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_toLeftOf="@id/btn_favorite"
		    android:layout_centerVertical="true" />
		
		<TextView android:id="@+id/txt_type"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:text="상"
		    android:textColor="#000000"
		    android:gravity="center"
		    android:layout_toLeftOf="@id/btn_speek"
		    android:layout_centerVertical="true" />
		
		<LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@id/txt_type"
		    android:layout_toRightOf="@id/text_count"
		    android:gravity="center_vertical"
		    android:orientation="vertical">
		    <TextView 
		        android:id="@+id/txt_english"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="apple" android:textColor="#000000"
		        android:textStyle="bold" />
		    <TextView 
		        android:id="@+id/txt_korean"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:textSize="13dp"
		        android:text="사과잼" android:textColor="#000000" />
		</LinearLayout>
    </RelativeLayout>

</FrameLayout>